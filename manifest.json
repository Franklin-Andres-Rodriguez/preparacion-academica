  "share_target": {
    "action": "/share-bug-case",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "code",
          "accept": [
            "text/javascript",
            "application/json",
            ".js",
            ".json",
            ".html",
            ".css"
          ]
        }
      ]
    }
  },

  "protocol_handlers": [
    {
      "protocol": "web+bugacademy",
      "url": "/handle-protocol?url=%s"
    }
  ],

  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/javascript": [".js"],
        "application/json": [".json"],
        "text/html": [".html"],
        "text/css": [".css"]
      },
      "launch_type": "single-client"
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "launch_handler": {
    "client_mode": "navigate-existing"
  },

  "prefer_related_applications": false,

  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.bugacademy.app",
      "id": "com.bugacademy.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/bug-academy/id123456789"
    }
  ],

  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",

  "permissions": ["storage"],

  "features": ["CrossOriginIsolated"]
